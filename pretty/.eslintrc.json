{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-multi-spaces": "warn",
    "no-multiple-empty-lines": "warn",
    "no-unused-expressions": "warn",
    "no-use-before-define": "warn",
    "no-var": "warn",
    "prefer-const": "warn",
    "space-in-parens": "warn"
  }
}